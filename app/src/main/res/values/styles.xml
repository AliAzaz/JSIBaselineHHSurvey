<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:checkboxStyle">@style/checkbox</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="spinnerStyle">@style/spinner</item>
        <!--<item name="toolbarStyle">@style/ActionBar</item>-->

        <!-- Customize your theme here. -->
    </style>

    <!-- Irfan Scrollview  -->

    <style name="i_scrollview">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <!-- Irfan Textview  -->
    <style name="i_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!-- Irfan RadioGroup  -->
    <style name="i_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Irfan RadioButton  -->
    <style name="i_radiobutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="textInput" parent="android:Widget.Material.Light.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>

    </style>

    <!-- EditText Acept Characters Starts. -->
    <style name="EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!-- EditText Acept Number  Starts. -->
    <style name="EditText_number" parent="android:Widget.Material.Light.EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!-- EditText Acept Number Decimal  Starts. -->
    <style name="EditText_number_de" parent="android:Widget.Material.Light.EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- EditText Acept Date Black Box.-->
    <style name="EditText_number_b_box" parent="android:Widget.Material.Light.EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- EditText Acept Number  Ends. -->

    <!--Card View Start-->
    <style name="cardView">
        <item name="android:background">@color/dullWhileOverlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
        <!--<item name="android:layout_marginLeft">10dp</item>-->
        <item name="cardCornerRadius">7dp</item>
        <item name="cardElevation">3dp</item>
    </style>
    <!--Card View End-->

    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="checkbox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#33b78ff7</item>
        <item name="sv_showcaseColor">@color/colorPrimaryDark</item>
        <item name="sv_buttonText">OK</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="buttons" parent="android:Widget.Material.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="buttons2" parent="android:Widget.Material.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">50</item>
        <item name="android:radius">2dp</item>
        <item name="android:padding">13dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackgroundStyle" parent="android:Widget.Material.Light.ScrollView">
        <item name="android:background">#e4e4e4</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="labels" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="spinner" parent="android:Widget.Material.Light.Spinner.Underlined">
        <item name="android:background">@drawable/spinner_style</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="linearlayout_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="linearlayout_view_wt_bound">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
